<?xml version="1.0" encoding="utf-8"?>
<com.vivalab.library.gallery.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    tools:layout_height="254dp"
    tools:layout_width="179dp">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#1a1a1a"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:alpha="0.6"
        android:scaleType="fitXY"
        android:src="@drawable/vivashow_picker_shadow_n"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rl_share_local_video"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mine_video_bg">

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="Super Tiger"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <ImageView
            android:src="@drawable/mine_icon_share"
            android:layout_width="12dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_play_video"
        android:src="@drawable/mine_btn_video_play"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"/>



</com.vivalab.library.gallery.view.SquareRelativeLayout>